<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f"
    android:backgroundTintMode="add"
    tools:context=".MenuInicio"
    android:orientation="vertical"
    android:gravity="center">

        <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="72dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"

                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:background="@drawable/circulo_image" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="11dp"
                android:src="@drawable/icono" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:text="Mar"
                android:textStyle="bold"
                android:textSize="35dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Â¡Bienvenido!"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginVertical="15dp"/>

        <Button
            android:id="@+id/btnCuentos"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_fondo_color"
            android:text="CUENTOS"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btnMemorama"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_arena"
            android:text="MEMORAMA"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btnTesoro"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_fondo_color"
            android:text="TESORO"
            android:textColor="#fff"
            android:textSize="16sp"
            />
    <Button
        android:id="@+id/btnImitame"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_arena"
        android:text="IMITAME"
        android:textColor="#fff"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/btnEjercicios"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_fondo_color"
        android:text="EJERCICIOS"
        android:textColor="#fff"
        android:textSize="16sp"
        />
        <Button
            android:id="@+id/btnSalir"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_salir"
            android:text="SALIR"
            android:textColor="#fff"
            android:textSize="16sp"
            />

</LinearLayout>